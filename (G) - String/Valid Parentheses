class Solution {
public:
    bool isValid(string s) {
        int len=s.length();
        stack <char> par;
        for(int i=0;i<len;i++)
        {
            if(par.empty())
        {
            par.push(s[i]);
        }
        else if((par.top()=='(' && s[i]==')') || (par.top()=='[' && s[i]==']') || (par.top()=='{' && s[i]=='}'))
        {
            par.pop();
        }
        else
        {
            par.push(s[i]);
        }
        }
        if(par.empty())
        {
            return true;;
        }
        return false;
    }
};
