
class Solution {
  public:
    int findPair(int n, int x, vector<int> &arr) {
        // code here
        sort(arr.begin(),arr.end());
        int i=0;
        int j=1;
         while (j < arr.size() && i < arr.size()) {
            int val = arr[j] - arr[i];
            if (i != j && val == x) {
                return 1;
            } else if (val < x) {
                j++;
            } else {
                i++;
            }
        }
        return -1;
    }
};
